@model PatientAppointment.Domain.Patient

@{
    ViewData["Title"] = "Patient Details";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h3 class="card-title mb-0">@Model.FullName</h3>
            </div>

            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">ID</dt>
                    <dd class="col-sm-9">@Model.Id</dd>

                    <dt class="col-sm-3">Address</dt>
                    <dd class="col-sm-9">@Model.Address</dd>

                    <dt class="col-sm-3">Phone</dt>
                    <dd class="col-sm-9">@Model.Phone</dd>

                    <dt class="col-sm-3">Gender</dt>
                    <dd class="col-sm-9">@Model.Gender</dd>

                    <dt class="col-sm-3">Birth Date</dt>
                    <dd class="col-sm-9">@Model.BirthDate.ToShortDateString()</dd>

                    <dt class="col-sm-3">Country</dt>
                    <dd class="col-sm-9">@Model.Country</dd>
                </dl>
            </div>

            <div class="card-footer text-end">
                <div class="d-flex justify-content-end gap-2">
                    <a asp-controller="Appointments" asp-action="PatientAppointments" asp-route-pid="@Model.Id" class="btn btn-outline-primary">@Model.FullName appointments</a>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">Delete</a>
                    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>