@model IEnumerable<PatientAppointment.Domain.Patient>

@{
    ViewData["Title"] = "Index";
}

<div class="card d-none d-md-block mt-5">
            <div class="card-body">
                    <h1>Patients</h1>

                    <p>
                        <a asp-action="Create" class="btn btn-primary mt-2">Create New</a>
                    </p>
   <form asp-controller="Patients" asp-action="Delete" id="antiForgeryForm" class="d-none"></form>
    <div class="table-responsive d-none d-md-block">
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Id)</th>
                <th>@Html.DisplayNameFor(model => model.FullName)</th>
                <th>@Html.DisplayNameFor(model => model.Address)</th>
                <th class="d-none d-lg-table-cell">@Html.DisplayNameFor(model => model.Phone)</th>
                <th class="d-none d-lg-table-cell">@Html.DisplayNameFor(model => model.Gender)</th>
                <th class="d-none d-xl-table-cell">@Html.DisplayNameFor(model => model.BirthDate)</th>
                <th class="d-none d-xl-table-cell">@Html.DisplayNameFor(model => model.Country)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
                    @foreach (var item in Model)
                    {
                    <tr id="patient-row-@item.Id">
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Address)</td>
                        <td class="d-none d-lg-table-cell">@Html.DisplayFor(modelItem => item.Phone)</td>
                        <td class="d-none d-lg-table-cell">@Html.DisplayFor(modelItem => item.Gender)</td>
                        <td class="d-none d-xl-table-cell">@Html.DisplayFor(modelItem => item.BirthDate)</td>
                        <td class="d-none d-xl-table-cell">@Html.DisplayFor(modelItem => item.Country)</td>
                        <td>
                            <div class="d-flex flex-wrap gap-2">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Details</a>
                                    @* <a href="#" onclick="deletePatient(@item.Id, event)" class="btn btn-sm btn-outline-danger">Delete</a> *@
                                    <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal" data-patient-id="@item.Id" data-patient-name="@item.FullName">
                                        Delete
                                    </button>
                                </div>
                        </td>
                    </tr>
                    }
        </tbody>
    </table>
</div>


                </div>
</div>

                                    <!-- Mobile view: stacked card layout -->
<div class="d-block d-md-none">
    <h2>Patients</h2>
    <p>
        <a asp-action="Create" class="btn btn-primary mt-2">Create New</a>
    </p>
    @foreach (var item in Model)
    {
        <div id="patient-card-@item.Id" class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">@item.FullName</h5>
                        <p class="card-text mb-1"><strong>ID:</strong> @item.Id</p>
                        <p class="card-text mb-1"><strong>Address:</strong> @item.Address</p>
                        <p class="card-text mb-1"><strong>Phone:</strong> @item.Phone</p>
                        <p class="card-text mb-1"><strong>Gender:</strong> @item.Gender</p>
                        <p class="card-text mb-1"><strong>BirthDate:</strong> @item.BirthDate</p>
                        <p class="card-text mb-2"><strong>Country:</strong> @item.Country</p>
                        <div class="d-flex flex-wrap gap-2">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Details</a>
                            @*<a href="#" onclick="deletePatient(@item.Id, event)" class="btn btn-sm btn-outline-danger">Delete</a> *@
                    <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal" data-patient-id ="@item.Id" data-patient-name ="@item.FullName">
                        Delete
                    </button>
                </div>
                    </div>
                </div>
    }
</div>



<!-- Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Confirm Delete Patient</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete the patient <strong id="patientName"></strong> ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" id="confirmButton" class="btn btn-danger">Yes, Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
	<script src="~/js/instance-delete.js"></script>
}