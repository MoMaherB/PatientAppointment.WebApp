@model IEnumerable<PatientAppointment.Domain.User>

@{
    ViewData["Title"] = "User Management";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h2>@ViewData["Title"]</h2>
        </div>
        <div class="col text-end">
            <!-- Button to go to the "Add New User" page -->
            <a asp-action="CreateUser" class="btn btn-primary">
                <i class="fas fa-user-plus me-2"></i>Add New User
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Username</th>
                        <th>Role</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Username</td>
                            <td>
                                <span class="badge
                                        @(user.Role == "Admin" ? "bg-success" :
                                                                            user.Role == "Receptionist" ? "bg-info" : "bg-secondary")">
                                @user.Role
                            </span>
                        </td>
                           
                                <td class="text-end">
                                    <!-- Delete Button for each user -->
                            @if (user.Role != "Admin")
                                {
                                    <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-sm btn-outline-danger"
                                    onclick="return confirm('Are you sure you want to delete this user?');">
                                        <i class="fas fa-trash"></i> Delete
                                    </a>
                                }
                                </td>
                           
                        </tr>
                                        }
                </tbody>
            </table>
        </div>
    </div>
</div>