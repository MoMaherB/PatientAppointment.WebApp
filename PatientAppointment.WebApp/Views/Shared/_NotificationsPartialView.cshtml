@if (TempData["success"] != null)
{
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/toastr.js/toastr.min.js"></script>

	<script type="text/javascript">
		toastr.success('@TempData["success"]', 'Success', { "closeButton": true, "progressBar": true, "timeOut": 5000 });
	</script>
}

@if (TempData["error"] != null)
{
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/toastr.js/toastr.min.js"></script>

	<script type="text/javascript">
                toastr.error('@TempData["error"]', 'Error', { "closeButton": true, "progressBar": true, "timeOut": 5000 });
    </script>
}